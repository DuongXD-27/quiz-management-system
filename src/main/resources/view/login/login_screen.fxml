<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="768.0" prefWidth="1024.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.se.quiz.quiz_management_system.controller.login.LoginScreenController">
   <top>
      <Label alignment="CENTER" contentDisplay="CENTER" text="Quiz App" textAlignment="CENTER" BorderPane.alignment="CENTER">
         <font>
            <Font size="50.0" />
         </font>
         <BorderPane.margin>
            <Insets top="10.0" />
         </BorderPane.margin>
      </Label>
   </top>
   <center>
      <VBox alignment="TOP_CENTER" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <Label alignment="CENTER" text="Login" VBox.vgrow="ALWAYS">
               <VBox.margin>
                  <Insets />
               </VBox.margin>
               <font>
                  <Font size="24.0" />
               </font>
            </Label>
            <TextField fx:id="tfUsername" promptText="Username">
               <font>
                  <Font size="24.0" />
               </font>
            </TextField>
            <TextField fx:id="tfPassword" promptText="Password">
               <font>
                  <Font size="24.0" />
               </font>
            </TextField>
            <Button fx:id="btnLoginTeacher" mnemonicParsing="false" onAction="#btnLoginTeacherPressed" text="Login (Teacher Account)">
               <font>
                  <Font size="24.0" />
               </font>
            </Button>
            <Button fx:id="btnLoginStudent" mnemonicParsing="false" onAction="#btnLoginStudentPressed" text="Login (Student Account)">
               <font>
                  <Font size="24.0" />
               </font>
            </Button>
            <Button fx:id="btnCreateAccount" mnemonicParsing="false" onAction="#btnCreateAccountPressed" text="Create new account">
               <font>
                  <Font size="24.0" />
               </font>
            </Button>
            <Label fx:id="lblException" text=" Label dùng để xử lý ngoại lệ">
               <font>
                  <Font size="24.0" />
               </font>
            </Label>
         </children>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
         <padding>
            <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
         </padding>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
      </VBox>
   </center>
</BorderPane>
