<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<BorderPane prefHeight="768.0" prefWidth="1024.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.se.quiz.quiz_management_system.controller.teacher.TeacherMainScreenController">
   <left>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="btnLogout" mnemonicParsing="false" onAction="#btnLogoutPressed" text="Logout">
               <font>
                  <Font size="24.0" />
               </font>
            </Button>
            <Button fx:id="btnCreateNewQuiz" mnemonicParsing="false" onAction="#btnCreateNewQuizPressed" text="Create New Quiz">
               <font>
                  <Font size="24.0" />
               </font>
            </Button>
            <Button fx:id="btnChooseQuizzes" mnemonicParsing="false" onAction="#btnChooseQuizzesPressed" text="Choose Quizzes">
               <font>
                  <Font size="24.0" />
               </font>
            </Button>
            <Button fx:id="btnViewResults" mnemonicParsing="false" onAction="#btnViewResultsPressed" text="View Results">
               <font>
                  <Font size="24.0" />
               </font>
            </Button>
         </children>
      </VBox>
   </left>
   <center>
      <StackPane fx:id="stpCenter" BorderPane.alignment="CENTER" />
   </center>
</BorderPane>
