<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<BorderPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.se.quiz.quiz_management_system.controller.teacher.CreateNewQuizController">
   <bottom>
      <HBox BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="btnNewQuestion" mnemonicParsing="false" onAction="#btnNewQuestionPressed" text="New Question">
               <font>
                  <Font size="24.0" />
               </font>
            </Button>
            <Button fx:id="btnDeleteQuestion" mnemonicParsing="false" onAction="#btnDeleteQuestionPressed" text="Delete Question">
               <font>
                  <Font size="24.0" />
               </font>
            </Button>
            <Button fx:id="btnNewOption" mnemonicParsing="false" onAction="#btnNewOptionPressed" text="New Option">
               <font>
                  <Font size="24.0" />
               </font>
            </Button>
            <Button fx:id="btnDeleteOption" mnemonicParsing="false" onAction="#btnDeleteOptionPressed" text="Delete Option">
               <font>
                  <Font size="24.0" />
               </font>
            </Button>
            <Button fx:id="btnSave" mnemonicParsing="false" onAction="#btnSavePressed" text="Save">
               <font>
                  <Font size="24.0" />
               </font>
            </Button>
            <Button fx:id="btnClear" mnemonicParsing="false" onAction="#btnClearPressed" text="Clear">
               <font>
                  <Font size="24.0" />
               </font>
            </Button>
         </children>
         <BorderPane.margin>
            <Insets top="20.0" />
         </BorderPane.margin>
      </HBox>
   </bottom>
   <top>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <Label text="Title:">
               <font>
                  <Font size="24.0" />
               </font>
            </Label>
            <TextField fx:id="tfTitle" promptText="Untitled quiz">
               <font>
                  <Font size="24.0" />
               </font>
            </TextField>
            <Label text="Description:">
               <font>
                  <Font size="24.0" />
               </font>
            </Label>
            <TextField fx:id="tfDescription" promptText="Quiz description">
               <font>
                  <Font size="24.0" />
               </font>
            </TextField>
         </children>
      </VBox>
   </top>
   <center>
      <ScrollPane fitToWidth="true" hbarPolicy="NEVER" BorderPane.alignment="CENTER">
         <content>
            <VBox fx:id="vboxQuiz" spacing="10.0" />
         </content>
         <BorderPane.margin>
            <Insets top="20.0" />
         </BorderPane.margin>
      </ScrollPane>
   </center>
</BorderPane>
